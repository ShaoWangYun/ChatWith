<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.dxxy.chatwith.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/rl_register_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#283951"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/rl_register_title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/img_username"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_username"
            android:textSize="20sp" />

        <com.dxxy.chatwith.widget.LineEditText
            android:id="@+id/et_username"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_username"
            android:background="@null"
            android:ems="10"
            android:hint="请输入用户名"
            android:text="Shaowangyun" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_register_username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_password"
            android:textSize="20sp" />

        <com.dxxy.chatwith.widget.LineEditText
            android:id="@+id/et_password"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/img_manage_password"
            android:layout_toRightOf="@+id/img_password"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:text="123456" />

        <ImageView
            android:id="@+id/img_manage_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hidepassword" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_register_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/img_confirm_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_password"
            android:textSize="20sp" />

        <com.dxxy.chatwith.widget.LineEditText
            android:id="@+id/et_confirm_password"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/img_manage_confirm_password"
            android:layout_toRightOf="@+id/img_confirm_password"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:text="123456" />

        <ImageView
            android:id="@+id/img_manage_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hidepassword" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_register_confirm_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_ring_shape_transparent"
        android:text="确认注册"
        android:textAllCaps="false"
        android:textColor="#283951"
        android:textSize="25sp" />

</RelativeLayout>
